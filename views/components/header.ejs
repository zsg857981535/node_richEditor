    <script type="text/javascript">
            //删除操作
            function onDelete(article_id){
                //弹出确认框
                var r = window.confirm('确定删除该文章吗?')
                if(r){
                    $.ajax({
                        url:'/api/articles/' + article_id,
                        method:'DELETE',
                        processData: false,
                        contentType: false,
                        success:function(res){
                            alert(res.message);
                            //重新加载当前页面
                            location.reload();
                        }
                    })
                }
            }
    </script>
